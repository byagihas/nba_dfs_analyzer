<div class="userlineup">
  <p id="notice"><%= notice %></p>
  <h3>User Lineup</h3>
  <table class="user-lineup-table sortable">
    <thead>
      <tr>
        <th>Pos</th>
        <th>Name</th>
        <th>Team</th>
        <th>Avg.</th>
        <th>Cost</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @nbaplayers.each do |player| %>
          <tr>
            <td class="leftmost"><%= player[:position] %></td>
            <td><%= player[:name] %></td>
            <td><%= player[:team]%></td>
            <td><%= player[:avgpoints] %></td>
            <td><%= player[:cost] %></td>
            <td><%= button_to '+', {:action=>"add_lineup_item", :li_id => player[:id]}%></td>
              <td></td>
            <% end %>
          </tr>
        </tr>
    </tbody>
  </table>
</div>
