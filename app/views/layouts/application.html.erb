<!DOCTYPE html>
<html>
<head>
  <title>NBA Player Database</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <script src="https://code.jquery.com/jquery-2.1.3.min.js"</script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css" rel="stylesheet">
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <script src="//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/js/bootstrap.min.js"></script>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-stacked navbar-static-top">
    <div class="menu row-fluid">
      <ul id="nav">
        <li><%= link_to 'Home', root_path %></li>
        <% if user_signed_in? %>
          <li><%= link_to 'Add NBA Players', list_path %></li>
        <% end %>
        <li><%= link_to 'User Lineup', nbaplayers_path %></li>
      </ul>
    </div>
    <div class="login row-fluid">
       <% if user_signed_in? %>
       <ul class="signed-in">
         <li>Signed in in as <%= current_user.email %></li>
         <li><%= link_to "Sign Out", sign_out_path, method: :delete %></li>
       </ul>
       <% else %>
       <ul class="signed-out">
         <li><%= link_to "Sign In", sign_in_path %></li>
       </ul>
       <% end %>
    </div>
  </nav>
  <div class="container-fluid">
    <% flash.each do |type, message| %>
      <div class="<%= type %>">
        <p><%= message %></p>
      </div>
    <% end %>
    <%= yield %>
  </div>
</body>
</html>
